public static void findMinAndMax(int array[]) {
		int min = 100000;
		int max = 0;
		for (int i=0; i<array.length; i++) {
			if (array[i]< min) {
				min = array[i];
			}
			if (array[i]> max) {
				max = array[i];
			}
		}
			System.out.println("The min value is " + min );
			System.out.println("The max value is " + max );
		
	}
